<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/message_vertical_margin"
    android:paddingLeft="@dimen/message_horizontal_margin"
    android:paddingRight="@dimen/message_horizontal_margin"
    android:paddingTop="@dimen/message_vertical_margin">

    <TextView
        android:id="@+id/msg_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/corner_bg_2"
        android:maxWidth="300dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="right message"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>